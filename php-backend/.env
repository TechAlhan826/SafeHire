# SafeHire Environment Configuration

# Application Settings
APP_NAME=SafeHire
DEBUG_MODE=true
LOG_ERRORS=true
ERROR_LOG=logs/error.log

# API Settings
BASE_URL=http://0.0.0.0:5000/api
APP_URL=http://0.0.0.0:5000
FRONTEND_URL=http://0.0.0.0:5001
JWT_SECRET=safehire_secure_jwt_key_for_development
JWT_EXPIRE=86400

# Database Settings
# Using Replit PostgreSQL by default
# The system will automatically detect and use PostgreSQL if available
# Otherwise, it will fall back to these MySQL settings
DB_HOST=localhost
DB_USER=safehire_user
DB_PASS=safehire_password
DB_NAME=safehire
DB_PORT=3306

# Allowed Origins for CORS
ALLOWED_ORIGINS=*

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
